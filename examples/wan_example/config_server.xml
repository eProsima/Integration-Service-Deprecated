<?xml version="1.0"?>
<is>
    <profiles>
        <transport_descriptors>
            <transport_descriptor>
                <transport_id>TCPv4_Server</transport_id>
                <type>TCPv4</type>
                <wait_negotiation>false</wait_negotiation>
                <listening_ports>
                    <port>5100</port>
                </listening_ports>
            </transport_descriptor>
        </transport_descriptors>

        <participant profile_name="LocalParticipant">
            <rtps>
                <builtin>
                    <domainId>0</domainId>
                </builtin>
            </rtps>
        </participant>

        <participant profile_name="TCPParticipant">
            <rtps>
                <userTransports>
                    <transport_id>TCPv4_Server</transport_id>
                </userTransports>
                <builtin>
                    <domainId>0</domainId>
                </builtin>
                <useBuiltinTransports>false</useBuiltinTransports>
            </rtps>
        </participant>

        <subscriber profile_name="HelloWorldSubscriber">
            <topic>
                <name>HelloWorldTopic</name>
                <dataType>HelloWorld</dataType>
            </topic>
        </subscriber>

        <publisher profile_name="HelloWorldPublisher">
            <topic>
                <name>HelloWorldTopic</name>
                <dataType>HelloWorld</dataType>
            </topic>
        </pubsliher>
    </profiles>

    <connector name="LocalToRemote">
        <reader participant_profile="LocalParticipant" subscriber_profile="HelloWorldSubscriber"/>
        <writer participant_profile="TCPParticipant" publisher_profile="HelloWorldPublisher"/>
    </connector>
</is>

<?xml version="1.0"?>
<is>
    <is_types>
        <type name="ShapeType">
            <library>build/libshapelib.so</library>
        </type>
    </is_types>

    <profiles>
        <transport_descriptors>
            <transport_descriptor>
                <transport_id>TCPv4_Client</transport_id>
                <wait_negotiation>false</wait_negotiation>
                <type>TCPv4</type>
            </transport_descriptor>
        </transport_descriptors>

        <participant profile_name="LocalShapes">
            <rtps>
                <builtin>
                    <domainId>1</domainId>
                </builtin>
            </rtps>
        </participant>

        <participant profile_name="TCPShapes">
            <rtps>
                <userTransports>
                    <transport_id>TCPv4_Client</transport_id>
                </userTransports>
                <builtin>
                    <domainId>0</domainId>
                    <leaseDuration>
                        <sec>DURATION_INFINITY</sec>
                    </leaseDuration>
                    <initialPeersList>
                        <locator>
                            <tcpv4>
                                <address>127.0.0.1</address>
                                <physical_port>5100</physical_port>
                            </tcpv4>
                        </locator>
                    </initialPeersList>
                </builtin>
                <useBuiltinTransports>false</useBuiltinTransports>
            </rtps>
        </participant>

        <subscriber profile_name="subscriberSquare">
            <topic>
                <name>Square</name>
                <dataType>ShapeType</dataType>
                <kind>WITH_KEY</kind>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>6</depth>
                </historyQos>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <liveliness>
                    <kind>AUTOMATIC</kind>
                    <lease_duration>INFINITE</lease_duration>
                </liveliness>
                <durability>
                    <kind>TRANSIENT_LOCAL</kind>
                </durability>
            </qos>
            <historyMemoryPolicy>DYNAMIC</historyMemoryPolicy>
        </subscriber>

        <subscriber profile_name="subscriberTriangle">
            <topic>
                <name>Triangle</name>
                <dataType>ShapeType</dataType>
                <kind>WITH_KEY</kind>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>6</depth>
                </historyQos>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <liveliness>
                    <kind>AUTOMATIC</kind>
                    <lease_duration>INFINITE</lease_duration>
                </liveliness>
                <durability>
                    <kind>TRANSIENT_LOCAL</kind>
                </durability>
            </qos>
            <historyMemoryPolicy>DYNAMIC</historyMemoryPolicy>
        </subscriber>

        <subscriber profile_name="subscriberCircle">
            <topic>
                <name>Circle</name>
                <dataType>ShapeType</dataType>
                <kind>WITH_KEY</kind>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>6</depth>
                </historyQos>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <liveliness>
                    <kind>AUTOMATIC</kind>
                    <lease_duration>INFINITE</lease_duration>
                </liveliness>
                <durability>
                    <kind>TRANSIENT_LOCAL</kind>
                </durability>
            </qos>
            <historyMemoryPolicy>DYNAMIC</historyMemoryPolicy>
        </subscriber>

        <publisher profile_name="publisherSquare">
            <topic>
                <name>Square</name>
                <dataType>ShapeType</dataType>
                <kind>WITH_KEY</kind>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>6</depth>
                </historyQos>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <liveliness>
                    <kind>AUTOMATIC</kind>
                    <lease_duration>INFINITE</lease_duration>
                </liveliness>
                <durability>
                    <kind>TRANSIENT_LOCAL</kind>
                </durability>
            </qos>
            <historyMemoryPolicy>DYNAMIC</historyMemoryPolicy>
        </publisher>

        <publisher profile_name="publisherTriangle">
            <topic>
                <name>Triangle</name>
                <dataType>ShapeType</dataType>
                <kind>WITH_KEY</kind>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>6</depth>
                </historyQos>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <liveliness>
                    <kind>AUTOMATIC</kind>
                    <lease_duration>INFINITE</lease_duration>
                </liveliness>
                <durability>
                    <kind>TRANSIENT_LOCAL</kind>
                </durability>
            </qos>
            <historyMemoryPolicy>DYNAMIC</historyMemoryPolicy>
        </publisher>

        <publisher profile_name="publisherCircle">
            <topic>
                <name>Circle</name>
                <dataType>ShapeType</dataType>
                <kind>WITH_KEY</kind>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>6</depth>
                </historyQos>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <liveliness>
                    <kind>AUTOMATIC</kind>
                    <lease_duration>INFINITE</lease_duration>
                </liveliness>
                <durability>
                    <kind>TRANSIENT_LOCAL</kind>
                </durability>
            </qos>
            <historyMemoryPolicy>DYNAMIC</historyMemoryPolicy>
        </publisher>
    </profiles>

    <connector name="TCP_Local_SQUARES">
        <reader participant_profile="TCPShapes" subscriber_profile="subscriberSquare"/>
        <writer participant_profile="LocalShapes" publisher_profile="publisherSquare"/>
    </connector>

    <connector name="TCP_Local_TRIANGLES">
        <reader participant_profile="TCPShapes" subscriber_profile="subscriberTriangle"/>
        <writer participant_profile="LocalShapes" publisher_profile="publisherTriangle"/>
    </connector>

    <connector name="TCP_Local_CIRCLES">
        <reader participant_profile="TCPShapes" subscriber_profile="subscriberCircle"/>
        <writer participant_profile="LocalShapes" publisher_profile="publisherCircle"/>
    </connector>
</is>

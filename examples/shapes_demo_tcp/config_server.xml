<?xml version="1.0"?>
<is>
    <topic_types>
        <type name="ShapeType">
            <library>libshapelib.so</library>
        </type>
    </topic_types>

    <profiles>
        <transport_descriptors>
            <transport_descriptor>
                <transport_id>TCPv4_Server</transport_id>
                <type>TCPv4</type>
                <wan_addr>127.0.0.1</wan_addr>
                <listening_ports>
                    <port>5100</port>
                </listening_ports>
            </transport_descriptor>
        </transport_descriptors>

        <participant profile_name="LocalShapes">
            <rtps>
                <builtin>
                    <domainId>0</domainId>
                </builtin>
            </rtps>
        </participant>

        <participant profile_name="TCPShapes">
            <rtps>
                <userTransports>
                    <transport_id>TCPv4_Server</transport_id>
                </userTransports>
                <defaultUnicastLocatorList>
                    <locator>
                        <kind>TCPv4</kind>
                        <address>127.0.0.1</address>
                        <ports_>
                            <physical_port>5100</physical_port>
                        </ports_>
                    </locator>
                </defaultUnicastLocatorList>
                <builtin>
                    <domainId>0</domainId>
                    <leaseDuration>
                        <durationbyname>INFINITE</durationbyname>
                    </leaseDuration>
                    <metatrafficUnicastLocatorList>
                        <locator>
                            <kind>TCPv4</kind>
                            <address>127.0.0.1</address>
                            <ports_>
                                <physical_port>5100</physical_port>
                            </ports_>
                        </locator>
                    </metatrafficUnicastLocatorList>
                </builtin>
                <use_IP4_to_send>true</use_IP4_to_send>
                <use_IP6_to_send>false</use_IP6_to_send>
                <useBuiltinTransports>false</useBuiltinTransports>
            </rtps>
        </participant>

        <subscriber profile_name="subscriberSquare">
            <topic>
                <name>Square</name>
                <dataType>ShapeType</dataType>
                <kind>WITH_KEY</kind>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>6</depth>
                </historyQos>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <liveliness>
                    <kind>AUTOMATIC</kind>
                    <lease_duration>INFINITE</lease_duration>
                </liveliness>
                <durability>
                    <kind>TRANSIENT_LOCAL</kind>
                </durability>
            </qos>
            <historyMemoryPolicy>DYNAMIC</historyMemoryPolicy>
        </subscriber>

        <subscriber profile_name="subscriberTriangle">
            <topic>
                <name>Triangle</name>
                <dataType>ShapeType</dataType>
                <kind>WITH_KEY</kind>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>6</depth>
                </historyQos>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <liveliness>
                    <kind>AUTOMATIC</kind>
                    <lease_duration>INFINITE</lease_duration>
                </liveliness>
                <durability>
                    <kind>TRANSIENT_LOCAL</kind>
                </durability>
            </qos>
            <historyMemoryPolicy>DYNAMIC</historyMemoryPolicy>
        </subscriber>

        <subscriber profile_name="subscriberCircle">
            <topic>
                <name>Circle</name>
                <dataType>ShapeType</dataType>
                <kind>WITH_KEY</kind>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>6</depth>
                </historyQos>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <liveliness>
                    <kind>AUTOMATIC</kind>
                    <lease_duration>INFINITE</lease_duration>
                </liveliness>
                <durability>
                    <kind>TRANSIENT_LOCAL</kind>
                </durability>
            </qos>
            <historyMemoryPolicy>DYNAMIC</historyMemoryPolicy>
        </subscriber>

        <publisher profile_name="publisherSquare">
            <topic>
                <name>Square</name>
                <dataType>ShapeType</dataType>
                <kind>WITH_KEY</kind>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>6</depth>
                </historyQos>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <liveliness>
                    <kind>AUTOMATIC</kind>
                    <lease_duration>INFINITE</lease_duration>
                </liveliness>
                <durability>
                    <kind>TRANSIENT_LOCAL</kind>
                </durability>
            </qos>
            <historyMemoryPolicy>DYNAMIC</historyMemoryPolicy>
        </publisher>

        <publisher profile_name="publisherTriangle">
            <topic>
                <name>Triangle</name>
                <dataType>ShapeType</dataType>
                <kind>WITH_KEY</kind>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>6</depth>
                </historyQos>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <liveliness>
                    <kind>AUTOMATIC</kind>
                    <lease_duration>INFINITE</lease_duration>
                </liveliness>
                <durability>
                    <kind>TRANSIENT_LOCAL</kind>
                </durability>
            </qos>
            <historyMemoryPolicy>DYNAMIC</historyMemoryPolicy>
        </publisher>

        <publisher profile_name="publisherCircle">
            <topic>
                <name>Circle</name>
                <dataType>ShapeType</dataType>
                <kind>WITH_KEY</kind>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>6</depth>
                </historyQos>
            </topic>
            <qos>
                <reliability>
                    <kind>RELIABLE</kind>
                </reliability>
                <liveliness>
                    <kind>AUTOMATIC</kind>
                    <lease_duration>INFINITE</lease_duration>
                </liveliness>
                <durability>
                    <kind>TRANSIENT_LOCAL</kind>
                </durability>
            </qos>
            <historyMemoryPolicy>DYNAMIC</historyMemoryPolicy>
        </publisher>
    </profiles>

    <connector name="Local_TCP_SQUARES">
        <subscriber participant_profile="LocalShapes" subscriber_profile="subscriberSquare"/>
        <publisher participant_profile="TCPShapes" publisher_profile="publisherSquare"/>
    </connector>

    <connector name="Local_TCP_TRIANGLES">
        <subscriber participant_profile="LocalShapes" subscriber_profile="subscriberTriangle"/>
        <publisher participant_profile="TCPShapes" publisher_profile="publisherTriangle"/>
    </connector>

    <connector name="Local_TCP_CIRCLES">
        <subscriber participant_profile="LocalShapes" subscriber_profile="subscriberCircle"/>
        <publisher participant_profile="TCPShapes" publisher_profile="publisherCircle"/>
    </connector>
</is>

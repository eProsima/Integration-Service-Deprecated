        <writer participant_profile="HelloWorldParticipant" publisher_profile="pubHW"/>
    <transformation file="build\Debug\keyhelloworld_dyn_dyn_lib.dll" function="KeyToHelloWorld"/>
    </connector>
-->
</is>
